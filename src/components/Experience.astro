---
import SectionContainer from "./SectionContainer.astro";
import ExperienceItem from "@/components/ExperienceItem.astro"
import experienceData from "@/data/experience.json"

import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const experience = experienceData.experience
---
<SectionContainer title={i18n.EXPERIENCE.EXPERIENCE_TITLE} subtitle={i18n.EXPERIENCE.EXPERIENCE_SUBTITLE}>
    <ol class="mt-16 max-w-4xl mx-auto">
        {
            experience.map(({title, company, description, time})=>(
                <li>
                    <ExperienceItem title={title[currentLocale]} company={company} description={description[currentLocale]} date={time[currentLocale]}/>
                </li>
            ))
        }
    </ol>
</SectionContainer>