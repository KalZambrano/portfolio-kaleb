---
import AboutMe from '@/components/AboutMe.astro';
import Layout from '@/layouts/Layout.astro';
import Skills from '@/components/skills-components/Skills.astro';
import Projects from '@/components/Projects.astro';
import Experience from './Experience.astro';
import Introduction from '@/components/Introduction.astro'
import Certificates from '@/components/Certificates.astro'
import Recomendations from './Recomendations.astro';
import { getI18N } from '@/i18n';

const { currentLocale } = Astro
const i18n = getI18N({currentLocale})
---

<Layout title=`${i18n.SEO_TITLE_1}` description=`${i18n.SEO_DESCRIPTION}` keywords={`${i18n.SEO_KEYWORDS}`}>
	<Introduction/>
	<Experience/>
	<Skills/>
	<Projects/>
	<Certificates/>
	<Recomendations/>
	<AboutMe/>
</Layout>
