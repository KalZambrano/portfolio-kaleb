---
import skillsData from '@/data/skills.json'
import SkillCard from './SkillCard.astro';
import SectionContainer from './SectionContainer.astro';

import { getI18N } from '@/i18n';

const { currentLocale } = Astro
const i18n = getI18N({currentLocale})

const skills = skillsData.skills;
---
<SectionContainer id="habilidades" title={i18n.SKILLS.SKILLS_TITLE} subtitle={i18n.SKILLS.SKILLS_SUBTITLE}>

  <section class="flex flex-wrap gap-6 justify-center">
    {skills.map(skill => (
      <SkillCard title={skill.name} level={skill.level[currentLocale]} iconSrc={skill.icon} iconDark={skill.iconDark}/>
    ))}
  </section>
</SectionContainer>
