---
import SectionContainer from "./SectionContainer.astro";
import projectsData from "@/data/projects.json"
import ProjectCard from "@/components/ProjectCard.astro"

import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const projects = projectsData.projects
---

<SectionContainer>
  <h2 class="dark:text-gray-500 font-semibold text-xl mb-2">
    {i18n.EXPERIENCES.EXPERIENCES_TITLE}
  </h2>
  <h3 class="dark:text-gray-300 font-bold text-5xl mb-8">
    {i18n.EXPERIENCES.EXPERIENCES_SUBTITLE}
  </h3>
  <section
    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mx-3 my-4"
  >
  {
    projects.map(({title, description, image, url, github, tecs}) => (
        <ProjectCard title={title}, description={description[currentLocale]}, image={image}, tecs={tecs}, url={url}, github={github}/>
    ))
  }
  </section>
</SectionContainer>
